<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>CreateDoctorServlet</servlet-name>
        <servlet-class>ece356.CreateDoctorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ece356.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PatientSignupServlet</servlet-name>
        <servlet-class>ece356.PatientSignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PatientSearchServlet</servlet-name>
        <servlet-class>ece356.PatientSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FollowPatientServlet</servlet-name>
        <servlet-class>ece356.FollowPatientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateReviewServlet</servlet-name>
        <servlet-class>ece356.CreateReviewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateDoctorServlet</servlet-name>
        <url-pattern>/CreateDoctorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientSignupServlet</servlet-name>
        <url-pattern>/PatientSignupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientSearchServlet</servlet-name>
        <url-pattern>/PatientSearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FollowPatientServlet</servlet-name>
        <url-pattern>/FollowPatientServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateReviewServlet</servlet-name>
        <url-pattern>/CreateReviewServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
